#!/bin/bash

DEVICE="/dev/input/event0"
HOME_DIR="$(cat /etc/freedom-node/homedir 2>/dev/null)"
mkdir -p "$HOME_DIR"/node

LABEL="Touch"
declare -A point
step=0

evtest "$DEVICE" | while read -r LINE; do
  if [[ "$LINE" == *"ABS_X"* ]]; then
    x=$(echo "$LINE" | grep -oP 'value \K[0-9]+' | awk '{ print $NF }' | awk '{ sum += $1; n++ } END { if (n > 0) print sum / n; }' | awk -F. '{ print $1 }')
  elif [[ "$LINE" == *"ABS_Y"* ]]; then
    y=$(echo "$LINE" | grep -oP 'value \K[0-9]+' | awk '{ print $NF }' | awk '{ sum += $1; n++ } END { if (n > 0) print sum / n; }' | awk -F. '{ print $1 }')
    echo "$x $y" >"$HOME_DIR"/node/touchcoords.tmp
  elif [[ "$LINE" == *"BTN_TOUCH"* && "$LINE" == *"value 0"* ]]; then
    if [[ $step -eq 0 ]]; then
      point[x1]=$x
      point[y1]=$y
      ((step++))
    else
      point[x2]=$x
      point[y2]=$y
      echo "\"$LABEL:${point[x1]}:${point[y1]}:${point[x2]}:${point[y2]}\"" >"$HOME_DIR"/node/touchconfig.tmp
      pkill -f /etc/freedom-node/include/touch
      bash /etc/freedom-node/include/touch &
      step=0
      unset point
      declare -A point
    fi
  fi
done

# END
